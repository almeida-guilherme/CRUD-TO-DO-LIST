<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>To Do List</title>
</head>
<body>

    <header>
        <% if (task == null) { %>
            <form action="/create" method="POST">
                <input type="text" name="task" id="task" placeholder="Insira uma tarefa">
                <button type="submit" id="addButon">Adicionar</button>
            </form>
         <% } else { %>
            <form action="/update/<%= task._id %>" method="POST">
                <input type="text" name="task" id="task" value="<%= task.task %>">
                <button type="submit" id="addButon">Atualizar</button>
            </form>
        <% } %>
    </header>

    <section id="tasks">
        <ul>
            <% taskList.forEach((task) => { %>
                <li>
                    <%= task.task %> | <%= task.date.toLocaleDateString('pt-BR') %>
                    <a href="/getByID/<%= task.id %>/update">Editar</a>
                    <a href="/getByID/<%= task.id %>/delete">Apagar</a>
                </li>
           <%  }) %>
        </ul>
    </section>
    <% if (taskDelete != null) { %>
        <section id="modal">
            <div id="card">
                <a href="/">x</a>
                <h2>Confirmação</h2>
                <hr>
                <p>Deseja realmente apagar a tarefa: <%= taskDelete.task %> ?</p>
                <a href="/">Não</a>
                <a href="/deleteTask/<%= taskDelete._id %>">Sim</a>
            </div>
        </section>
    <% } %>
    <script src="script.js"></script>
</body>
</html>